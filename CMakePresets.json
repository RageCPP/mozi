{
  "version": 6,
  "configurePresets": [
    {
      "name": "debug",
      "description": "Default settings for the project",
      "hidden": false,
      "generator": "Unix Makefiles",
      "binaryDir": "./build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "BUILD_SHARED_LIBS": "NO",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}",
        "CMAKE_C_COMPILER": "/usr/bin/gcc-13",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-13"
      }
    },
    {
      "name": "release",
      "description": "Default settings for the project",
      "hidden": false,
      "generator": "Unix Makefiles",
      "binaryDir": "./build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "BUILD_SHARED_LIBS": "NO",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}",
        "CMAKE_C_COMPILER": "/usr/bin/gcc-13",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-13"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug_lib",
      "description": "Build the library",
      "configurePreset": "debug",
      "jobs": 32,
      "targets": [
        "mozi"
      ]
    },
    {
      "name": "release_lib",
      "description": "Build the library",
      "configurePreset": "release",
      "jobs": 32,
      "targets": [
        "mozi"
      ]
    },
    {
      "name": "samples",
      "description": "Build the samples",
      "configurePreset": "debug",
      "jobs": 32,
      "targets": [
        "deque_sample"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "test",
      "configurePreset": "debug",
      "environment": {
        "CTEST_ARGS": "-R Mozi"
      }
    }
  ]
}